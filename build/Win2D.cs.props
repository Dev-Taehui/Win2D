<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="Win2D.common.props"/>

  <!-- [[NOT IN SAMPLE]] -->

  <PropertyGroup>
    <OutputPath>$(__OutputPath)</OutputPath>
    <OutDir>$(__OutputPath)\</OutDir>
    <GenerateProjectSpecificOutputFolder>false</GenerateProjectSpecificOutputFolder>
  </PropertyGroup>

  <!-- [[IN SAMPLE]] -->

  <PropertyGroup>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <TargetPlatformVersion>10.0.19041.0</TargetPlatformVersion>

    <!-- Don't fail the build for [Experimental] warnings (eg. for CanvasAnimatedControl) -->
    <WarningsNotAsErrors>$(WarningsNotAsErrors);CS8305</WarningsNotAsErrors>
  </PropertyGroup>
  <PropertyGroup>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants Condition="'$(EnableWin2DExperimentalFeatures)'=='true'">ENABLE_WIN2D_EXPERIMENTAL_FEATURES</DefineConstants>
  </PropertyGroup>
</Project>
